#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
    &kp ESC    &kp Q    
    &kp TAB    &kp A    
    &kp LSHIFT &mo 1    
            >;
        };
        bt_layer {
            bindings = <
    &kp ESC              &bootloader
    &bt BT_SEL 1         &bt BT_CLR
    &kp LSHIFT           &bt BT_SEL 2
            >;
        };
    };
};